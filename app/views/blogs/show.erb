<h1><%= @blog.title %></h1>

<p class="pull-right">by <%=@blog.user.name %></p>

<p><%= link_to 'Index', blog_path %> | (<%= link_to 'Edit', edit_blog_path %>)</p>
<p class="description"><%= @blog.description %></p>

<% if @blog.posts.empty? %>
<p>No posts, yet.</p>
<%= link_to 'First Post', '' %>
<% else %>
<%= link_to 'New Post', '' %>
<ul class="posts">
  <% @blog.posts.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>
<% end %>
