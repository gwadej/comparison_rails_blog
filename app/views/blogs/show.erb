<h1><%= @blog.title %></h1>

<p>by <%=@blog.user.name %></p>

<p class="description"><%= @blog.description %></p>

<% if @blog.posts.empty? %>
<p>No posts, yet.</p>
<% else %>
<ul class="posts">
  <% @blog.posts.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>
<% end %>
