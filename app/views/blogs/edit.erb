<h1>Edit</h1>

<%= form_for( @blog, url: { action: 'update'}, html: {class: "nifty_form"}) do |f| %>
  <%= label_tag(:title, 'Title:') %>
  <%= f.text_field(:title) %><br />
  <%= label_tag(:description, 'Description:') %><br />
  <%= f.text_area(:description, size: '80x5' ) %><br />
  <%= submit_tag('Update') %>
<% end %>
